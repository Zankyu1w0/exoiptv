<AnaEkran>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.05, 0.05, 0.05, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "TITAN TV"
            size_hint_y: None
            height: "60dp"
            font_size: "24sp"
            bold: True

        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "10dp"
                
                # Kanal listesini otomatik olu≈üturur
                Widget:
                    size_hint_y: None
                    height: 0
                    on_parent:
                        for kanal in root.kanallar: \
                        btn = self.parent.add_widget(Factory.KanalButonu(text=kanal['text'], logo=kanal['logo'], url=kanal['url']))

<KanalButonu@Button>:
    text: ""
    logo: ""
    url: ""
    size_hint_y: None
    height: "80dp"
    background_normal: ""
    background_color: 0.15, 0.15, 0.15, 1
    on_release: app.kanal_ac(self.url)
    
    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        padding: "10dp"
        spacing: "20dp"
        AsyncImage:
            source: self.parent.logo
            size_hint_x: None
            width: "60dp"
            allow_stretch: True
        Label:
            text: self.parent.text
            font_size: "18sp"
            halign: "left"
            text_size: self.size
            valign: "middle"

<OynaticiEkran>:
    BoxLayout:
        orientation: 'vertical'
        VideoPlayer:
            id: player
            source: ""
            options: {'allow_stretch': True}
        
        Button:
            text: "GERI DON"
            size_hint_y: None
            height: "50dp"
            background_normal: ""
            background_color: 0.8, 0.1, 0.1, 1
            on_release: root.manager.current = 'ana'
